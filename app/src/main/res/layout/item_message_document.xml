<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:gravity="left">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            style="@style/CardView.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/custom_ripple"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            tools:cardElevation="1dp">

            <LinearLayout
                android:id="@+id/clicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:descendantFocusability="beforeDescendants"
                android:focusable="true"
                tools:gravity="left"
                android:orientation="horizontal"
                android:padding="12dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bck_oval"
                    android:backgroundTint="#404AB1DF"
                    android:padding="8dp"
                    android:rotation="25"
                    android:src="@drawable/vicon_attach_file"
                    android:tint="@color/black" />

                <TextView
                    android:id="@+id/messege_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="12dp"
                    android:textSize="16sp"
                    tools:targetApi="m"
                    tools:text="saldasdasdasdasdasdasdasdasdasdas" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/messege_time"
                style="@style/Bisyor.TitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:textSize="12sp"
                tools:text="11:55" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                tools:src="@drawable/vicon_done_one"
                android:tint="@color/buttonColor" />


        </LinearLayout>


    </LinearLayout>

</layout>
