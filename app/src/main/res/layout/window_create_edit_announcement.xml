<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:gravity="center"
                android:text="@string/text_add_product"
                android:textAlignment="center"
                android:textAppearance="@style/MyToolbarTitleAppearance"
                android:textSize="17sp">

            </TextView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/clicker_reset"
                style="@style/Bisyor.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:text="@string/reset" />
        </RelativeLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/Bisyor.SurfaceStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/switch_lay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/top_lay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent=".7">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/button_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/bck_inactive_segment_button"
                    android:gravity="center"
                    android:visibility="visible">

                    <View
                        android:id="@+id/view_status_changer"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bck_active_segment_button"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.5" />

                    <LinearLayout
                        android:id="@+id/status_lay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/text_user"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:text="@string/create_announcement_user"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/text_store"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:text="@string/create_announcement_store"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                            android:textColor="@color/black" />

                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>


            <LinearLayout
                android:id="@+id/top_lay"
                style="@style/Bisyor.LayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/switch_lay">

                <com.example.testapp.presentation.customview.CustomLinearLayout
                    android:id="@+id/clicker_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_ripple"
                    android:focusable="true"
                    android:orientation="horizontal"
                    tools:ignore="ExtraText,MissingClass">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/text_category"
                        style="@style/Bisyor.EditText"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:hint="@string/category_required"
                        android:maxLines="1"
                        android:singleLine="true" />

                    <include
                        layout="@layout/view_more_right"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="12dp"
                        android:tint="@color/text_inactive_color" />

                </com.example.testapp.presentation.customview.CustomLinearLayout>

                <View
                    style="@style/Bisyor.LineStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <com.example.testapp.presentation.customview.CustomLinearLayout
                    android:id="@+id/clicker_store"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_ripple"
                    android:focusable="true"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/ed_store"
                        style="@style/Bisyor.EditText"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:hint="@string/store_required"
                        android:maxLines="1"
                        android:singleLine="true" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="12dp"
                        android:alpha="0.5"
                        android:src="@drawable/vicon_more_bottom"
                        android:tint="@color/text_inactive_color" />

                </com.example.testapp.presentation.customview.CustomLinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/text_no_category_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/no_edit_announcement_category"
                android:textColor="@color/pink"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/top_lay" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/images"
                android:textColor="@color/text_inactive_color"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_no_category_edit" />

            <View
                android:id="@+id/view2"
                style="@style/Bisyor.LineStyle"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintBottom_toTopOf="@+id/scv_images"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <HorizontalScrollView
                android:id="@+id/scv_images"
                style="@style/Bisyor.LayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:layout_marginTop="12dp"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/list_images"
                            android:layout_width="wrap_content"
                            android:layout_height="112dp"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:itemCount="1"/>

                        <ImageView
                            android:id="@+id/clicker_pick_image"
                            android:layout_width="112dp"
                            android:layout_height="84dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="@string/image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/drw_add_image" />

                    </LinearLayout>
                </RelativeLayout>


            </HorizontalScrollView>

            <View
                style="@style/Bisyor.LineStyle"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="54dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scv_images" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/create_announcement_images_comment"
                android:textColor="@color/text_inactive_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scv_images" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/main_fields"
                android:textColor="@color/text_inactive_color"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />


            <LinearLayout
                android:id="@+id/linearLayout2"
                style="@style/Bisyor.LayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView10">

                <View
                    style="@style/Bisyor.LineStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/ed_title"
                    style="@style/Bisyor.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="@string/title_required"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:singleLine="true" />

                <View
                    style="@style/Bisyor.LineStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/description_required"
                    android:textColor="@color/text_inactive_color" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lay_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="16dp"
                    android:hint="@string/description_hint"
                    app:counterEnabled="true"
                    app:counterMaxLength="20000"
                    app:counterOverflowTextColor="@color/activeIconColor"
                    app:counterTextColor="@color/buttonColor"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                    app:errorTextColor="@color/activeIconColor"
                    app:helperText="good description"
                    app:helperTextTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_description"
                        style="@style/Bisyor.SurfaceStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:fontFamily="sans-serif"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:maxHeight="1000dp"
                        android:maxLines="1000"
                        android:minLines="5"
                        android:paddingStart="8dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="17sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <View
                    style="@style/Bisyor.LineStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/menu_tarif"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:hint="@string/period"
                    app:hintTextColor="@color/buttonColor">

                    <AutoCompleteTextView
                        android:id="@+id/dropdown_period"
                        style="@style/Bisyor.TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:lineSpacingExtra="5sp" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center_vertical|end"
                    android:textSize="13sp"
                    tools:text="12 июля 2019 г. 11:00" />

                <View
                    style="@style/Bisyor.LineStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/price"
                android:textColor="@color/text_inactive_color"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />


            <LinearLayout
                android:id="@+id/price_lay"
                style="@style/Bisyor.LayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/price_text">

                <View
                    style="@style/Bisyor.LineStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/ed_price"
                    style="@style/Bisyor.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="@string/price_required"
                    android:inputType="numberSigned"
                    android:maxLines="1"
                    android:singleLine="true" />

                <View
                    style="@style/Bisyor.LineStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/clicker_currency_sum"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="10"
                        android:background="@drawable/selector_button"
                        android:backgroundTint="@color/buttonColor"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:paddingStart="16dp"
                        android:paddingTop="6dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="6dp"
                        android:text="@string/sum"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/clicker_currency_dollar"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="10"
                        android:background="@drawable/selector_button"
                        android:backgroundTint="#f3f6fc"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:paddingStart="16dp"
                        android:paddingTop="6dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="6dp"
                        android:text="@string/y_e"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />


                </LinearLayout>

                <View
                    style="@style/Bisyor.LineStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/dynamic_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/price_lay"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/other_properties"
                    android:textColor="@color/text_inactive_color"
                    android:textSize="17sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dynamic_list"
                    style="@style/Bisyor.LayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/textView11" />


            </LinearLayout>


            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/contact_info"
                android:textColor="@color/text_inactive_color"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dynamic_lay" />


            <LinearLayout
                android:id="@+id/linearLayout3"
                style="@style/Bisyor.LayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView12">

                <View
                    style="@style/Bisyor.LineStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/user_name"
                    style="@style/Bisyor.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="@string/user_required"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:singleLine="true" />

                <View
                    style="@style/Bisyor.LineStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/ed_phone"
                    style="@style/Bisyor.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="@string/number_required"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:singleLine="true" />

                <View
                    style="@style/Bisyor.LineStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />


                <LinearLayout
                    android:id="@+id/phones_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/additional_phone"
                        android:textColor="@color/text_inactive_color" />


                </LinearLayout>


                <TextView
                    android:id="@+id/add_phone"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="end|center_vertical"
                    android:text="@string/plus_numbers" />


                <View
                    style="@style/Bisyor.LineStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/social_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/additional_links"
                        android:textColor="@color/text_inactive_color" />

                </LinearLayout>

                <TextView
                    android:id="@+id/add_social"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="end|center_vertical"
                    android:text="@string/add_social"
                    android:visibility="gone" />


                <View
                    style="@style/Bisyor.LineStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="24dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/geo_data"
                android:textColor="@color/text_inactive_color"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />


            <LinearLayout
                android:id="@+id/linearLayout4"
                style="@style/Bisyor.LayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView13">


                <View
                    style="@style/Bisyor.LineStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />


                <com.example.testapp.presentation.customview.CustomLinearLayout
                    android:id="@+id/clicker_region"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_ripple"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/text_region"
                        style="@style/Bisyor.EditText"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:hint="@string/region_required"
                        android:inputType="numberSigned"
                        android:maxLines="1"
                        android:singleLine="true" />


                    <include
                        layout="@layout/view_more_right"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="12dp"
                        android:tint="@color/text_inactive_color" />

                </com.example.testapp.presentation.customview.CustomLinearLayout>


                <View
                    style="@style/Bisyor.LineStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />


                <com.example.testapp.presentation.customview.CustomLinearLayout
                    android:id="@+id/clicker_pick_map"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/micon_big_no_network" />

                    <TextView
                        android:id="@+id/text_coordname"
                        style="@style/Bisyor.TitleText"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:hint="@string/exact_geo"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <include
                        layout="@layout/view_more_right"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="12dp"
                        android:tint="@color/text_inactive_color" />

                </com.example.testapp.presentation.customview.CustomLinearLayout>


                <View
                    style="@style/Bisyor.LineStyle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay"
                style="@style/Bisyor.LayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

                <CheckBox
                    android:id="@+id/checkbox"
                    style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/create_announcement_policy"
                    android:textColor="@color/text_inactive_color"
                    android:textSize="16sp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:text="@string/text_continue"
                android:textColor="@color/white"
                android:backgroundTint="@null"
                android:background="@drawable/button_state_pressed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lay" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>
</LinearLayout>